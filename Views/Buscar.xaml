<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProyectoSeguridad.ViewModels"
             x:Class="ProyectoSeguridad.Views.Buscar"
             Title="Buscar">
    <ContentPage.BindingContext>
        <vm:SearchPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Entry 
                x:Name="DomainEntry"
                Placeholder="Ingrese el dominio"
                Text="{Binding Domain, Mode=TwoWay}"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="FillAndExpand" />

            <Picker 
                x:Name="ApiPicker"
                Title="Seleccione API"
                ItemsSource="{Binding ApiOptions}"
                SelectedItem="{Binding SelectedApi}"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="FillAndExpand" />

            <Button 
                Text="Buscar"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnSearchClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
